{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ customer.Firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ customer.Lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.Email }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ customer.CreateAt ? customer.CreateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LastEmail</th>
                <td>{{ customer.LastEmail }}</td>
            </tr>
            <tr>
                <th>HasAnswer</th>
                <td>{{ customer.HasAnswer ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>HasBuyed</th>
                <td>{{ customer.HasBuyed ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('mail') }}">Contact</a><br>

    <a href="{{ path('customer_index') }}">back to list</a><br>

    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
